<nav class="navbar sticky-top navbar-light bg-light">
  <a class="navbar-brand" href="#">Mister Cocktail</a>
  <p> <%= link_to "Back to cocktails", cocktails_path %> </p>
</nav>


<div class="banner-75vh d-flex justify-content-center align-items-center"
     style="background-image: url(<%= @cocktail.image_url %>);">
  <div class="text-center">
    <h1 class="text-white">
      <%= @cocktail.name %>
    </h1>
  </div>
</div>

<% @cocktail.doses.each do |dose| %>
  <div class= "d-flex justify-content-between">
    <h5> <%= dose.description %> </h5>
    <p> <%= dose.ingredient.name %> </p>

    <% dose.description %>
    <%= link_to "Delete dose",
              cocktail_dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
<div class="button">
  <p class="add"> <%= link_to "Add an Ingredient", new_cocktail_dose_path(@cocktail) %> </p>
</div>

